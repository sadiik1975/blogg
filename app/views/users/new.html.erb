<h1 align="center">Signup for Black Gods</h1>

<%= render 'shared/errors', obj: @user %>

<div class='row'>
 <div class='col-xs-12'>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |t| %>
  <div class="form-group">
   <div class="control-label col-sm-2">  
    <%= t.label :username %>
   </div>
   <div class="col-sm-8">
    <%= t.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
  </div>
</div>
  <div class="form-group">
   <div class="control-label col-sm-2">  
    <%= t.label :email %>
    </div>
     <div class="col-sm-8">
     <%= t.email_field :email, class: "form-control", placeholder: "Enter email" %>
     </div>
   </div>
   <div class="form-group">
   <div class="control-label col-sm-2">  
    <%= t.label :password %>
    </div>
     <div class="col-sm-8">
     <%= t.password_field :password, class: "form-control", placeholder: "password" %>
     </div>
   </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-5">
   <%= t.submit "Sign up", class:  'btn btn-primary btn-lg' %> 
   </div>
  </div>
<% end %>
<div class="form-group">
<div class="col-sm-offset-4 col-sm-4">
  [<%= link_to "Cancel request and return to articles listing", articles_path %>]
  </div>
  </div>
 